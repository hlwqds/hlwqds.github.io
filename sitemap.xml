---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <priority>1.0</priority>
  </url>
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/categories/</loc>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/tags/</loc>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/archives/</loc>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/about/</loc>
    <priority>0.8</priority>
  </url>

  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}{{ post.url }}</loc>
    <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
    <priority>0.8</priority>
  </url>
  {% endfor %}

  {% for page in site.pages %}
    {% if page.layout == 'page' or page.layout == 'about' %}
      {% if page.url != '/404.html' and page.url != '/sitemap.xml' and page.url != '/robots.txt' %}
      <url>
        <loc>{{ site.url }}{{ site.baseurl }}{{ page.url | remove: 'index.html' }}</loc>
        <priority>0.8</priority>
      </url>
      {% endif %}
    {% endif %}
  {% endfor %}
</urlset>
